generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String          @id @default(cuid())
  clerkId              String          @unique
  playlistUrl          String?
  playlistId           String?
  currentStreak        Int             @default(0)
  bestStreak           Int             @default(0)
  totalVideosCompleted Int             @default(0)
  lastActiveAt         DateTime?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  videoProgress        VideoProgress[]

  @@map("User")
}

model VideoProgress {
  id           String   @id @default(cuid())
  videoId      String
  userId       String
  completed    Boolean  @default(false)
  lastWatched  DateTime?
  notes        String?
  watchPosition Float?  // Position in seconds where user left off
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  keyTakeaways KeyTakeaway[]

  @@unique([videoId, userId])
  @@index([userId])
  @@index([videoId])
  @@index([watchPosition])
  @@map("VideoProgress")
}

model KeyTakeaway {
  id              String   @id @default(cuid())
  videoProgressId String
  content         String   // The key takeaway text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  videoProgress VideoProgress @relation(fields: [videoProgressId], references: [id], onDelete: Cascade)

  @@index([videoProgressId])
  @@map("KeyTakeaway")
}
